<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/list_copied"
        android:choiceMode="multipleChoice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_export_selected"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Export sel" />
        <Button
            android:id="@+id/button_export_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Export all" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">
        <Button
            android:id="@+id/button_import"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Import" />
        <Button
            android:id="@+id/button_delete_selected"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Delete sel" />
        <Button
            android:id="@+id/button_delete_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Delete all" />
    </LinearLayout>

</LinearLayout>
